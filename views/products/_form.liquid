<form method="POST" action="/products/{% if product.id %}{{product.id}}{% endif %}">
  {% if product.id %}
    <h2>Edit</h2>
  {% else %}
    <h2>Create</h2>
  {% endif %}
  <div>
    <label>Name:</label>
    <input type="text" name="name" value="{{product.name}}">
  </div>
  <div>
    <label>Price:</label>
    <input type="number" name="price" value="{{product.price}}" min="0" step="0.01"/>
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>